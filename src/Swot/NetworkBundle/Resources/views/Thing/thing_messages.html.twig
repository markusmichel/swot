{# Shows a list of ThingStatusUpdates #}
{% for newsitem in messages %}
    <div class="flex-row ">
        <div class="flex-center conversations-content">
            {{ newsitem.message }}
        </div>
        <div class="flex-right conversations-date">
            <div class="meta-info">from:
                {# date("U") formats datetime as timestamp #}
                <span class="message-sent" data-timestamp="{{ newsitem.sent|date("U") }}">
                    {{ newsitem.sent|date }}
                </span>
            </div>
        </div>
    </div>
    <hr/>
{% endfor %}