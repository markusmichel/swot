<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('res/css/foundation.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('res/css/style.css') }}">
            <link href='http://fonts.googleapis.com/css?family=Slabo+27px' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=Press+Start+2P' rel='stylesheet' type='text/css'>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="off-canvas-wrap" data-offcanvas>
            <div class="inner-wrap">
                <nav class="top-bar">
                    <ul>
                        <li class="toggle-topbar menu-icon"><a class="left-off-canvas-toggle" href="#"><span></span></a></li>
                        <li class="name"><h1><a href="{{ path('newsfeed') }}"></a></h1></li>
                    </ul>
                </nav>

                <!-- Off Canvas Menu -->
                <aside class="left-off-canvas-menu">
                    {% include 'navigation.html.twig' %}
                </aside>
                <div class="row">
                    <div class="large-12 small-centered columns">
                        <div class="row">
                            <div class="large-2 columns show-for-large-up">
                                {% include 'navigation.html.twig' %}
                            </div>
                            <div class="large-9 large-offset-1 columns">
                                {% for flashMessage in app.session.flashbag.get('notice') %}
                                    <div class="flash-notice">{{ flashMessage }}</div>
                                {% endfor %}
                                {% for flashMessage in app.session.flashbag.get('success') %}
                                    <div class="flash-success">{{ flashMessage }}</div>
                                {% endfor %}
                                {% block body %}{% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            <a class="exit-off-canvas"></a>

            </div>
        </div>
        {% block javascripts %}
            <script src="{{ asset('res/js/vendor/jquery.js') }}"></script>
            <script src="{{ asset('res/js/foundation.min.js') }}"></script>
            <script>
                $(document).foundation();
            </script>
        {% endblock %}
    </body>
</html>
