{% if user.ownerships|length > 0 %}
    {% if user != app.user %}
        <h2>{% trans %}user.thing.friend_title{% endtrans %}</h2>
    {% endif %}
    <div class="hex-list small">
        {% for ownership in user.ownerships %}
        <div class="hex">
            {% include 'SwotNetworkBundle:Thing:listEntry.html.twig' with {thing: ownership.thing} %}
            <img class="maskborder opac" src="
                                {{ (profile_image_folder ~ ownership.thing.profileImage) | imagine_filter('profile_image_thumb')|default( asset('res/gfx/thing.jpg')) }}"
                    />
        </div>
        {% endfor %}
    </div>
{% endif %}
{% if user.thingsLent|length > 0 %}
    <h2>
        {% if user != app.user %}
            {% trans %}user.thing.friend_lent_title{% endtrans %}
        {% else %}
            {% trans %}user.thing.my_lent_title{% endtrans %}
        {% endif %}
    </h2>
    <div class="hex-list small">
        {% for thing in user.thingsLent %}
        <div class="hex">
            {% include 'SwotNetworkBundle:Thing:listEntry.html.twig' with {thing: thing.thing} %}
            <img class="maskborder opac" src="{{ asset('res/gfx/thing.jpg') }}"
                    />
        </div>
        {% endfor %}
    </div>
{% endif %}