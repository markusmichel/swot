<a class="hex
    {% if thing.accessType == constant('Swot\\NetworkBundle\\Security\\AccessType::ACCESS_TYPE_PUBLIC') %}public-thing
    {% elseif thing.accessType == constant('Swot\\NetworkBundle\\Security\\AccessType::ACCESS_TYPE_RESTRICTED') %}restricted-thing
    {% elseif thing.accessType == constant('Swot\\NetworkBundle\\Security\\AccessType::ACCESS_TYPE_PRIVATE') %}private-thing{% endif %}
    " href="{{ path('thing_show', {id: thing.id}) }}">
    <div class="hex-item">
        <div class="hex-item-inner">
            {{ thing.name }}<br/>
            {% if showOwner is defined and showOwner %}
                Owner: {{ thing.ownership.owner.username }}
            {% endif %}
        </div>
    </div>
    <img class="maskborder opac" src="{{ (profile_image_folder ~ thing.profileImage|default('thing.jpg')) | imagine_filter('profile_image_thumb_small') }}"/>
</a>

